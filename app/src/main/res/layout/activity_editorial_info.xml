<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="←"
                android:textSize="20sp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin tòa soạn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <!-- Logo -->


        <!-- Nội dung thông tin -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:contentDescription="Logo Dân Trí"
            android:src="@drawable/ic_dantri_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="24dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cơ quan của Bộ Nội vụ"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng biên tập: Phạm Tuấn Anh"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giấy phép hoạt động báo điện tử Dân trí số 411/GP – BTTTT Hà Nội, ngày 31-10-2023"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ tòa soạn: Nhà 48, ngõ 2 Giảng Võ, Cát Linh, Đống Đa, Hà Nội"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Văn phòng đại diện miền Nam: 51 Võ Văn Tần, Phường Võ Thị Sáu, Quận 3, TPHCM"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Các liên hệ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_marginTop="8dp"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle">

            <!-- Điện thoại -->
            <LinearLayout
                android:id="@+id/contact_phone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Điện thoại"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="024-3736-6491"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#999999" />
            </LinearLayout>

            <!-- Hotline HN -->
            <LinearLayout
                android:id="@+id/hotline_hn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hotline HN"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0973-567-567"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#999999" />
            </LinearLayout>

            <!-- Hotline TPHCM -->
            <LinearLayout
                android:id="@+id/hotline_hcm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Hotline TPHCM"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0974-567-567"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#999999" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingHorizontal="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="info@dantri.com.vn"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="#999999" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
